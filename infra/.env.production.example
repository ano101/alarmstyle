# Production Environment Variables
# Copy this file to .env on your production server and configure

APP_NAME="AlarmStyle"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com
APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU
APP_MAINTENANCE_DRIVER=file

# Docker Ports (non-standard to avoid conflicts with native services)
APP_PORT=8080
APP_SSL_PORT=8443

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=alarmstyle
DB_USERNAME=alarmstyle
DB_PASSWORD=

# Cache & Session
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=
MEILISEARCH_NO_ANALYTICS=true
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true

# Mail
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# Security
BCRYPT_ROUNDS=12

# Horizon
HORIZON_BALANCE_STRATEGY=auto
HORIZON_BALANCE_MAX_SHIFT=1
HORIZON_FAST_TERMINATION=false

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# AWS (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false


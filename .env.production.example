# Production Environment Variables
# Copy this file to .env on your production server and configure

APP_NAME="AlarmStyle"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://yourdomain.com
APP_LOCALE=ru
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=ru_RU
APP_MAINTENANCE_DRIVER=file

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=alarmstyle
DB_USERNAME=alarmstyle
DB_PASSWORD=

# Cache & Session
CACHE_STORE=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true

# Mail
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=warning

# Horizon
HORIZON_BALANCE_STRATEGY=auto
HORIZON_BALANCE_MAX_SHIFT=1
HORIZON_FAST_TERMINATION=false

# Broadcasting (if needed)
BROADCAST_CONNECTION=log
